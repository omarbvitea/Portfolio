---
const {title, role, date, skills} = Astro.props
---
<div class="flex w-full flex-col justify-between gap-2">
  <div class="flex justify-between">
    <h3 class="font-medium">{title}</h3>
    <span class="flex justify-end font-light"> {date} </span>
  </div>
  <div class="flex justify-between">
    <span class="font-light">{role}</span>
    <div class="flex flex-wrap gap-2">
      {skills.map((skill: string) => (
        <span class="rounded-full bg-gray-100 px-2 py-1 text-xs">{skill}</span>
      ))}
  </div>
</div>
